            "errorMessageAPILinkText": "contact us for more help",
            "errorMessageAPILink": "#0",
            "options": {
                "regionCode": "gb-eng",
                "addressType": "residential"
            },
            "manualLink": "/patterns/addresses/examples/address-input-non-editable/register-address",
            "manualLinkText": "I canâ€™t find my address"
