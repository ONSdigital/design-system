{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/fieldset/_macro.njk" import onsFieldset %}
{% from "components/input/_macro.njk" import onsInput %}

{% call onsQuestion({
    "title": "How long did it take you complete this survey?"
}) %}
    {% call onsFieldset({
        "id": "survey-duration",
        "legend": "Time",
        "legendClasses": "u-vh"
    }) %}
        <div class="field-group">
            {{ onsInput({
                    "id": "survey-duration-hours",
                "type": "number",
                "name": "survey-duration-hours",
                "classes": "input--w-2",
                "attributes": {
                    "min": 0,
                    "max": 100
                },
                "suffix": {
                    "title": "Hours"
                }
            }) }}
        
            {{ onsInput({
                "id": "survey-duration-minutes",
                "type": "number",
                "name": "survey-duration-minutes",
                "classes": "input--w-2",
                "attributes": {
                    "min": 0,
                    "max": 59
                },
                "suffix": {
                    "title": "Minutes",
                    "text": "Mins"
                }
            }) }}
        </div>
    {% endcall %}
{% endcall %}
