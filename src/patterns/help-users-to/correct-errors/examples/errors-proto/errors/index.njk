---
layout: none
---
{% extends "layout/_template.njk" %}

{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/lists/_macro.njk" import onsList %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/date-input/_macro.njk" import onsDateInput %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/password/_macro.njk" import onsPassword %}
{% from "components/breadcrumbs/_macro.njk" import onsBreadcrumbs %}
{% from "components/duration/_macro.njk" import onsDuration %}

{% set pageConfig = {
    "title": "Error: Errors Prototype"
} %}

{% block preMain %}
    {{
        onsBreadcrumbs({
            "ariaLabel": 'Breadcrumbs',
            "itemsList": [
                {
                    "url": '/',
                    "text": 'Home'
                },
                {
                    "url": '/patterns',
                    "text": 'Patterns'
                },
                {
                    "url": '/patterns/correct-errors',
                    "text": 'Correct errors'
                }
            ]
        })
    }}
{% endblock %}

{% block main %}
    {% call onsPanel({
            "title": "There are 9 problems with this page",
            "type": "error",
            "classes": "ons-question__error"
        })
    %}
        {{
            onsList({
                "element": "ol",
                "itemsList": [
                    {
                        "text": "Enter the number of employees paid monthly",
                        "url": "#number-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Enter a number less than 101",
                        "url": "#suffixed-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Enter your date of birth",
                        "url": "#dates-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Select how you would like us to contact you",
                        "url": "#contact-preference-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Select what type of central heating your accommodation has",
                        "url": "#checkboxes-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Enter a password",
                        "url": "#password-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Enter an email address in a valid format, for example, name@example.com",
                        "url": "#email-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Enter a number that is less than 60",
                        "url": "#duration-error",
                        "variants": "inPageLink"
                    },
                    {
                        "text": "Select your preferred heat level of pepperoni",
                        "url": "#select-other-error",
                        "variants": "inPageLink"
                    }
                ]
            })
        }}
    {% endcall %}

    {% call onsQuestion ({
        "title": "Input errors examples",
        "submitButton": true
    }) %}
        {{
            onsInput({
                "type": "number",
                "id": "number",
                "width": "5",
                "fieldClasses": "ons-question__answer",
                "label": {
                    "text": "Number of employees paid monthly"
                },
                "error": {
                    "id": "number-error",
                    "text": "Enter the number of employees paid monthly"
                }
            })
        }}

        {{
            onsInput({
                "type": "number",
                "id": "number-input",
                "width": "3",
                "fieldClasses": "ons-question__answer",
                "value": "110",
                "label": {
                    "text": "Percentage of employees paid monthly"
                },
                "suffix": {
                    "title": "per cent",
                    "text": "%",
                    "id": "percentage-of-employees-suffix"
                },
                "error": {
                    "id": "suffixed-error",
                    "text": "Enter a number less than 101"
                }
            })
        }}

        {{
            onsDateInput({
                "legend": "Date of birth",
                "description": "For example, 31 3 1980",
                "legendOrLabel": "Date of birth",
                "id": "dates",
                "day": {
                    "label": {
                        "text": "Day"
                    },
                    "name": "day",
                    "attributes": {
                        "autocomplete": "bday-day"
                    }
                },
                "month": {
                    "label": {
                        "text": "Month"
                    },
                    "name": "month",
                    "attributes": {
                        "autocomplete": "bday-month"
                    }
                },
                "year": {
                    "label": {
                        "text": "Year"
                    },
                    "name": "year",
                    "attributes": {
                        "autocomplete": "bday-year"
                    }
                },
                "error": {
                    "text": "Enter your date of birth",
                    "id": "dates-error"
                }
            })
        }}

        {{
            onsRadios({
                "legend": "How would you like us to contact you?",
                "name": "contact-preference",
                "error": {
                    "text": "Select how you would like us to contact you",
                    "id": "contact-preference-error"
                },
                "radios": [
                    {
                        "id": "post",
                        "label": {
                            "text": "By post"
                        },
                        "value": "post"
                    },
                    {
                        "id": "email",
                        "label": {
                            "text": "By email"
                        },
                        "value": "email"
                    },
                    {
                        "id": "phone",
                        "label": {
                            "text": "By phone"
                        },
                        "value": "phone",
                        "other": {
                            "otherType": "select",
                            "id": "phone-time",
                            "name": "phone-time",
                            "label": {
                                "text": "Choose preferred time of day"
                            },
                            "options": [
                                {
                                    "value": "",
                                    "text": "Select an option",
                                    "disabled": true,
                                    "selected": true
                                },
                                {
                                    "value": "anytime",
                                    "text": "Any time of day"
                                },
                                {
                                    "value": "morning",
                                    "text": "Morning"
                                },
                                {
                                    "value": "afternoon",
                                    "text": "Afternoon"
                                },
                                {
                                    "value": "evening",
                                    "text": "Evening"
                                }
                            ]
                        }
                    }
                ]
            })
        }}

        {{
            onsCheckboxes({
                "legend": "What type of central heating does your accommodation have?",
                "id": "central-heating-answers",
                "checkboxesLabel": "Select all that apply",
                "name": "mutually-exclusive",
                "error": {
                    "text": "Select what type of central heating your accommodation has",
                    "id": "checkboxes-error"
                },
                "checkboxes": [
                    {
                        "id": "gas",
                        "label": {
                            "text": "Gas"
                        },
                        "value": "gas"
                    },
                    {
                        "id": "electric",
                        "label": {
                            "text": "Electric"
                        },
                        "value": "electric"
                    },
                    {
                        "id": "solid-fuel",
                        "label": {
                            "text": "Solid fuel"
                        },
                        "value": "solid-fuel"
                    },
                    {
                        "id": "other-fuel",
                        "label": {
                            "text": "Other"
                        },
                        "value": "other",
                        "other": {
                            "id": "other-fuel-textbox",
                            "name": "other-fuel-answer",
                            "label": {
                                "text": "Enter type of central heating"
                            }
                        }
                    }
                ],
                "mutuallyExclusive": {
                    "or": "Or",
                    "deselectMessage": "Selecting this will uncheck all other checkboxes",
                    "deselectGroupAdjective": "deselected",
                    "deselectExclusiveOptionAdjective": "deselected",
                    "exclusiveOptions": [
                        {
                            "id": "no-central-heating",
                            "label": {
                                "text": "No central heating"
                            },
                            "value": "no-central-heating"
                        }
                    ]
                }
            })
        }}

        {{
            onsPassword({
                "id": "password",
                "label": {
                    "text": "Password"
                },
                "error": {
                    "text": "Enter password",
                    "id": "password-error"
                },
                "showPasswordText": "Show password"
            })
        }}

        {{
            onsInput({
                "id": "email-address-input",
                "type": "email",
                "value": "name.com",
                "label": {
                    "text": "Email address"
                },
                "legend": "Get a confirmation email",
                "legendClasses": "ons-u-vh",
                "error": {
                    "text": "Enter an email address in a valid format, for example, name@example.com",
                    "id": "email-error"
                },
                "mutuallyExclusive": {
                    "or": "Or",
                    "deselectMessage": "Selecting this will clear your email address",
                    "deselectGroupAdjective": "cleared",
                    "deselectExclusiveOptionAdjective": "deselected",
                    "exclusiveOptions": [
                        {
                            "id": "email-checkbox",
                            "name": "no-email",
                            "value": "no-email",
                            "label": {
                                "text": "I don’t want to receive a confirmation email"
                            }
                        }
                    ]
                }
            })
        }}

        {{
            onsDuration({
                "legendOrLabel": "Duration",
                "id": "address-duration",
                "error": {
                    "text": "Enter a number that is less than 60",
                    "id": "duration-error"
                },
                "field1": {
                    "id": "address-duration-hours",
                    "name": "address-duration-hours",
                    "suffix": {
                        "text": "Hours",
                        "id": "address-duration-hours-suffix"
                    },
                    "value": "2"
                },
                "field2": {
                    "id": "address-duration-minutes",
                    "name": "address-duration-minutes",
                    "suffix": {
                        "text": "Minutes",
                        "id": "address-duration-mins-suffix"
                    },
                    "value": "60",
                    "error": true
                }
            })
        }}

        {{
            onsRadios({
                "legend": "Select your favourite toppings",
                "name": "food-other",
                "error": {
                    "text": "Select your preferred heat level of pepperoni",
                    "id": "select-other-error"
                },
                "radios": [
                    {
                        "id": "bacon-other",
                        "label": {
                            "text": "Bacon"
                        },
                        "value": "bacon"
                    },
                    {
                        "id": "olives-other",
                        "label": {
                            "text": "Olives"
                        },
                        "value": "olives"
                    },
                    {
                        "id": "pepperoni-other",
                        "label": {
                            "text": "Pepperoni"
                        },
                        "checked": true,
                        "value": "pepperoni",
                        "other": {
                            "otherType": "select",
                            "id": "pepperoni-heat-level",
                            "name": "pepperoni-heat-level",
                            "label": {
                                "text": "Choose preferred heat level"
                            },
                            "options": [
                                {
                                    "value": "",
                                    "text": "Select an option",
                                    "disabled": true,
                                    "selected": true
                                },
                                {
                                    "value": "mild",
                                    "text": "Mild"
                                },
                                {
                                    "value": "medium",
                                    "text": "Medium"
                                },
                                {
                                    "value": "hot",
                                    "text": "Hot"
                                },
                                {
                                    "value": "extra hot",
                                    "text": "Extra Hot"
                                }
                            ]
                        }
                    }
                ]
            })
        }}
    {% endcall %}
{% endblock %}
