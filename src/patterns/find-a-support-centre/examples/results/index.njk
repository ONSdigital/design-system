        {{
            onsList({
                "itemsList": [
                    {
                        "text": 'Monday to Friday, 9am to 4pm'
                    },
                    {
                        "text": 'Saturday, 9am to 5pm'
                    },
                    {
                        "text": 'Sunday, 9am to 5pm'
