---
layout: none
---
{% extends "styles/page-template/_template.njk" %}

{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/lists/_macro.njk" import onsList %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/date-input/_macro.njk" import onsDateInput %}
{% from "components/checkboxes/_macro.njk" import onsCheckboxes %}
{% from "components/password/_macro.njk" import onsPassword %}

{% set pageConfig = {
    "title": "Errors Prototype"
} %}


{% block main %}
    {% call onsPanel({
            "title": "This page has 2 errors",
            "type": "error",
            "classes": "question__errors"
        })
    %}
        <p>These <strong>must be corrected</strong> to continue.</p>

        {{
            onsList({
                "classes": "list--bare",
                "itemsList": [
                    {
                        "text": "Enter a number",
                        "index": true,
                        "url": "#number",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter a number less than or equal to 100",
                        "index": true,
                        "url": "#suffixed",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Select one answer",
                        "index": true,
                        "url": "#error",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter a date",
                        "index": true,
                        "url": "#date",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Select toppings",
                        "index": true,
                        "url": "#check",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter password",
                        "index": true,
                        "url": "#pass",
                        "classes": "js-inpagelink"
                    },
                    {
                        "text": "Enter an email address",
                        "index": true,
                        "url": "#email",
                        "classes": "js-inpagelink"
                    }
                ]
            })
        }}
    {% endcall %}

    {% call onsQuestion ({
        "title": "How many employees do you pay on a monthly basis?"
    }) %}
        {{
            onsInput({
                "type": "number",
                "id": "number-0",
                "classes": "input--w-5",
                "fieldClasses": "question__answer",
                "attributes": {
                    "min": 0,
                    "required": true
                },
                "label": {
                    "text": "Number of employees paid monthly"
                },
                "error": {
                    "id": "number",
                    "text": "Enter a number."
                }
            })
        }}

        {{
            onsInput({
                "type": "number",
                "id": "number-input",
                "classes": "input--w-2",
                "fieldClasses": "question__answer",
                "value": "101",
                "attributes": {
                    "required": true
                },
                "label": {
                    "text": "Percentage of employees paid monthly"
                },
                "suffix": {
                    "title": "percent",
                    "text": "%"
                },
                "error": {
                    "id": "suffixed",
                    "text": "Enter a number less than or equal to 100"
                }
            })
        }}

        {{
            onsRadios({
                "legend": "How many employees do you employ?",
                "name": "food",
                "id": "radios-1",
                "error": {
                    "text": "Select one answer",
                    "id": "error"
                },
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "1 - 10 employees"
                        },
                        "value": "a"
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "More than 10 employees"
                        },
                        "value": "b"
                    }
                ]
            })
        }}

        {{
            onsDateInput({
                "legend": "Date of birth",
                "description": "For example, 31 3 1980",
                "id": "dates",
                "day": {
                    "label": {
                        "text": "Day"
                    },
                    "name": "day",
                    "attributes": {
                        "autocomplete": "bday-day"
                    }
                },
                "month": {
                    "label": {
                        "text": "Month"
                    },
                    "name": "month",
                    "attributes": {
                        "autocomplete": "bday-month"
                    }
                },
                "year": {
                    "label": {
                        "text": "Year"
                    },
                    "name": "year",
                    "attributes": {
                        "autocomplete": "bday-year"
                    }
                },
                "error": {
                    "text": "Enter a date",
                    "id": "date"
                }
            })
        }}
        {{
            onsCheckboxes({
                "legend": "What are your favourite pizza toppings?",
                "checkboxesLabel": "Select all that apply",
                "name": "food",
                "error": {
                    "text": "Select answers",
                    "id": "check"
                },
                "checkboxes": [
                    {
                        "id": "bacon",
                        "label": {
                            "text": "Bacon"
                        },
                        "value": "bacon"
                    },
                    {
                        "id": "olives",
                        "label": {
                            "text": "Olives"
                        },
                        "value": "olives"
                    }
                ],
                "mutuallyExclusive": {
                    "or": "Or",
                    "deselectMessage": "Selecting this will uncheck all other checkboxes",
                    "deselectGroupAdjective": "deselected",
                    "deselectCheckboxAdjective": "deselected",
                    "checkbox": {
                        "id": "no-toppings",
                        "label": {
                            "text": "No toppings"
                        },
                        "value": "no-toppings"
                    }
                }
            })
        }}
        {{
            onsPassword({
                "id": "password",
                "label": {
                    "text": "Password"
                },
                "error": {
                    "text": "Enter password",
                    "id": "pass"
                },
                "showPasswordText": "Show password"
            })
        }}
        {{
            onsInput({
                "id": "email",
                "type": "email",
                "label": {
                    "text": "Enter an email address"
                },
                "error": {
                    "text": "Please enter an email address",
                    "id": "email"
                },
                "mutuallyExclusive": {
                    "or": "Or",
                    "deselectMessage": "Selecting this will clear your email address",
                    "deselectGroupAdjective": "cleared",
                    "deselectCheckboxAdjective": "deselected",
                    "checkbox": {
                        "id": "email-checkbox",
                        "name": "no-email",
                        "value": "no-email",
                        "label": {
                            "text": "I don't want to receive a confirmation email"
                        }
                    }
                }
            })
        }}
    {% endcall %}

    {{
        onsButton({
            "type": "button",
            "text": "Save and continue",
            "classes": "u-mt-xl"
        })
    }}
{% endblock %}
