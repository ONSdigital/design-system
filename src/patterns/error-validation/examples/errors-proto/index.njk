---
layout: none
---
{% extends "styles/page-template/_template.njk" %}

{% from "components/field/_macro.njk" import onsField %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% set page = {
    "title": "Errors Prototype"
} %}

{% set form = {
    "method": "GET",
    "attributes": {
        "action": pageInfo.url  + "/errors",
        "novalidate": ""
    }
} %}

{% block main %}
    {% call onsField({
        "legend": "How many employees do you pay on a monthly basis?",
        "questionMode": true
    }) %}
        {{
            onsInput({
                "id": "number",
                "type": "number",
                "classes": "input--w-5",
                "attributes": {
                    "min": 0,
                    "required": true
                },
                "label": {
                    "text": "Number of employees paid monthly"
                }
            })
        }}

        {{
            onsInput({
                "id": "suffixed",
                "type": "number",
                "classes": "input--w-2",
                "value": "101",
                "attributes": {
                    "required": true
                },
                "label": {
                    "text": "Percentage of employees paid monthly"
                },
                "suffix": {
                    "title": "percent",
                    "text": "%"
                }
            })
        }}
    {% endcall%}

    {{
        onsButton({
            "text": 'Save and continue',
            "classes": 'u-mb-m u-mt-l'
        })
    }}
{% endblock %}
