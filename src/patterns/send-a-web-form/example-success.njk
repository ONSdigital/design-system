---
title: 'Example: Send a web form confirmation'
layout: ~
---

{% extends "layout/_template.njk" %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/button/_macro.njk" import onsButton %}
{%
    set pageConfig = {
        "header": {
            "title": 'Service name'
        },
        "footer": {}
    }
%}
{% block main %}
    {{
        onsPanel({
            "classes": 'ons-u-mb-l',
            "variant": 'success',
            "id": 'webform-success-example',
            "iconType": 'check',
            "iconSize": 'xl',
            "body": '<h1>Thank you for contacting us</h1><p>Your message has been sent.</p>'
        })
    }}
    <p>We will respond to you within 2 working days.</p>
    {{
        onsButton({
            "text": 'Done',
            "classes": 'ons-u-mt-l',
            "noIcon": true,
            "url": '#0'
        })
    }}
{% endblock %}
