{% extends "./_master.njk" %}

{% block skiplink %}
    {% from "components/skip-to-content/_macro.njk" import onsSkipToContent %}
    {{
        onsSkipToContent({
            "url": "#main-content",
            "text": "Skip to main content"
        })
    }}
{% endblock %}
{% block header %}
    {% from "components/phase-banner/_macro.njk" import onsPhaseBanner %}
    {{
        onsPhaseBanner({
            "wide": true,
            "html": 'Help us to improve the ONS Design System. <a href="https://ows.io/tj/dhrye372">Take part in a short study</a>',
            "badge": 'Testing'
        })
    }}
    {% from "components/header/_macro.njk" import onsHeader %}
    {{
        onsHeader({
            "title": "Design system",
            "classes": "ons-patternlib-page__header",
            "wide": true,
            "logoHref": "https://www.ons.gov.uk/",
            "titleLogoHref": "/",
            "toggleButton": {
                "text": "Menu",
                "ariaLabel": "Toggle main navigation"
            },
            "navigation": {
                "id": "main-nav",
                "classes": "ons-nav--inline ons-nav--light ons-nav--header ons-nav--h-m ons-js-main-nav",
                "ariaLabel": "Main menu",
                "ariaListLabel": "Navigation menu",
                "currentPath": pageInfo.url,
                "itemsList": helpers.navigationHelper({
                    "pages": pageInfo.siteMap
                })
            }
        })
    }}
{% endblock %}
{% block pageContent %}
    <div class="ons-patternlib-page__body">
        <div class="ons-page__container ons-container ons-container--wide">
            <div class="ons-grid ons-grid--reverse">
                <div class="ons-grid__col ons-col-9@m">
                    <div class="ons-patternlib-page__content">
                        {% block preMain %}
                            {% from "components/breadcrumb/_macro.njk" import onsBreadcrumb %}
                            {% if pageInfo.parent[0].title === 'Home' %}
                                {{
                                    onsBreadcrumb({
                                        "ariaLabel": 'Breadcrumb',
                                        "classes": "ons-u-d-no@m",
                                        "itemsList": [
                                            {
                                                "url": "/",
                                                "text": 'Home'
                                            }
                                        ]
                                    })
                                }}
                            {% else %}
                                {{
                                    onsBreadcrumb({
                                        "ariaLabel": 'Breadcrumb',
                                        "classes": "ons-u-mb-s ons-u-d-no@m",
                                        "itemsList": [
                                            {
                                                "url": pageInfo.parent.url + "/",
                                                "text": pageInfo.parent.title
                                            }
                                        ]
                                    })
                                }}
                            {% endif %}
                        {% endblock %}
                        <main id="main-content" class="ons-patternlib-page__main ons-u-mt-m@m ons-u-mb-xl@m">
                            <div class="ons-patternlib-page__content">
                                <header class="ons-patternlib-page__content-header">
                                    <h1 class="ons-u-fs-xxl">
                                        {% if pageInfo.group %}
                                            <span class="ons-u-fs-m ons-u-db ons-u-mb-xs ons-u-lighter">{{ pageInfo.group | replace("...", "") }}</span>
                                        {% endif %}
                                        {{ pageInfo.title }}
                                    </h1>
                                    {% if pageInfo.experimental %}<span class="ons-pl-experimental-tag">Experimental</span>{% endif %}
                                </header>
                                {% block main %}
                                {% endblock %}
                            </div>
                        </main>
                    </div>
                </div>
                {% if (pageInfo.hideSidebar != true) and
                    (helpers.subNavigationHelper({ pageInfo: pageInfo }).length > 0)
                %}
                {% from "views/partials/sub-navigation/_macro.njk" import patternlibSubNavigation %}
                <div class="ons-grid__col ons-col-3@m">
                    <div class="ons-patternlib-page__sub-nav ons-u-mt-l@m ons-u-mb-l">
                        {% if pageInfo.parent[0].title === 'Home' %}
                            <h2 class="ons-u-fs-r--b ons-u-mt-m@xxs@m ons-u-d-no@m">Contents</h2>
                        {% else %}
                            <h2 class="ons-u-fs-r--b ons-u-bt@xxs@m ons-u-mt-m@xxs@m ons-u-pt-m@xxs@m ons-u-d-no@m">More in ‘{{ pageInfo.parent.title }}’</h2>
                        {% endif %}
                        {% for group in helpers.subNavigationHelper({
                            pageInfo: pageInfo,
                            anchorLinks: pageInfo.anchorLinks
                        }) %}
                            {% if group.title is defined and group.title %}
                                <h3 class="ons-u-fs-r--b ons-u-mb-s">{{ group.title }}</h3>
                            {% endif %}
                            {{
                                patternlibSubNavigation({
                                    "ariaLabel": "Sub menu",
                                    "ariraListLabel": "Child menu",
                                    "currentPath": pageInfo.url,
                                    "itemsList": group.items
                                })
                            }}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
