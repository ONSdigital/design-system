{% from "components/status/src/_macro.njk" import onsStatus %}

{% if params.type %}
    {% set typeClass = ' status--' + params.type %}
{% else %}
    {% set typeClass = ' status--info' %}
{% endif %}

{% if params.size == 'small' %}
    {% set sizeClass = ' status--small' %}
{% endif %}

<span class="status{{typeClass}}{{sizeClass}}">{{ params.label }}</span>
