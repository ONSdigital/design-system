{% if params.element %}
    {% set listEl = params.element | lower %}
{% else %}
    {% set listEl = 'ul' %}
{% endif %}

<{{listEl}} class="list {{ params.classes }}">
    {% for item in params.items %}
        <li class="list__item">
            {% if item.href %}
                <a href="{{ item.href }}"{% if item.target %} target="{{ item.target }}"{% endif %}>
                    {{ item.text }}
                </a>
            {% else %}
                {{ item.text }}
            {% endif %}
        </li>
    {% endfor %}
</{{listEl}}>
