{% macro onsDescriptionList(params) %}
  <dl class="ons-description ons-description__list ons-grid ons-grid--gutterless ons-u-cf{{ (' ' + params.classes) if params.classes }}"{% if params.id %} id="{{ params.id }}" {% endif %}{% if params.descriptionLabel %} title="{{ params.descriptionLabel }}" aria-label="{{ params.descriptionLabel }}"{% endif %}>
    {% for item in params.itemsList %}
      {% if item.term | length %}
          <dt class="ons-description__term ons-grid__col ons-col-{{ params.termCol }}@m">{{ item.term }}</dt>
      {% endif %}
        {% for descriptionItem in item.descriptions %}
          {% if descriptionItem.description | length %}
            <dd {% if description.id %}id="{{ descriptionItem.id }}" {% endif %}class="ons-description__value ons-grid__col ons-col-{{ params.descriptionCol }}@m">{{ descriptionItem.description }}</dd>
          {% endif %}
        {% endfor %}
    {% endfor %}
  </dl>
{% endmacro %}
