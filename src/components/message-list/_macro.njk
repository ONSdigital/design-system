{%- macro onsMessageList(params) -%}
<ul class="message-list" aria-label="{{ params.ariaLabel }}">
  {% for message in params.messages %}
    <li class="message-item" aria-labelledby="{{ message.id }}">
      <h3 class="message-item__subject" id="{{ message.id }}">
        <a href="{{ message.url }}" class="u-fs-r--b">{{ message.subject }}</a>
        {% if message.unread is defined and message.unread %}<span class="u-fs-s">({{ params.unreadText }})</span>{% endif %}
      </h3>
        <dl class="message-item__metadata" aria-label="{{ params.ariaLabelMetaData }}">
          <dt class="message-item__metadata-term u-vh">{{ params.fromLabel }}:</dt>
          <dd class="message-item__metadata-value u-fs-r--b">{{ message.fromText }}</dd>
          <dt class="message-item__metadata-term u-vh">{{ params.dateLabel }}:</dt>
          <dd class="message-item__metadata-value u-fs-s">{{ message.dateText }}</dd>
        </dl>
      <div class="message-item__body" aria-label="{{ params.ariaLabelMsg }}">
        {{ message.body | safe }}
      </div>
      <div class="message-item__link u-vh"><a href="{{ message.url }}">{{ params.hiddenReadLabel }}: {{ message.subject }}</a></div>
    </li>
  {% endfor %}
</ul>
{%- endmacro -%}
