{% macro onsContentPagination(params) %}
  <nav class="content-pagination" role="navigation" aria-label="{{ params.ariaLabel | default("Guide pagination") }}">
    <ul class="content-pagination__list">
      {% for contentPaginationItem in params.contentPaginationItems %}
        <li class="content-pagination__item">
          <a href="{{ contentPaginationItem.url }}" class="content-pagination__link" rel="{{ contentPaginationItem.rel }}">
            <span class="content-pagination__link-title">
              <svg class="content-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
                {% if contentPaginationItem.rel === 'prev' %}
                  <path fill="currentColor" d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                {% else %}
                  <path fill="currentColor" d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                {% endif %}
              </svg>
              <span class="content-pagination__link-text">
                {{ contentPaginationItem.text }}
              </span>
            </span>
            <span class="content-pagination__link-divider u-vh">{{ contentPaginationItem.bridgingText | default("page in this guide is:") }}</span>
            <span class="content-pagination__link-label">{{ contentPaginationItem.label }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endmacro %}
