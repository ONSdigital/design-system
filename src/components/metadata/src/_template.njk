<dl class="metadata metadata__list{% if params.metadataGrid %} grid grid--gutterless{% endif %}"{% if params.metadataLabel %} title="{{ params.metadataLabel }}" aria-label="{{ params.metadataLabel }}"{% endif %}>
{% if params.items %}
    {% for item in params.items %}
        <dt class="metadata__term{% if params.metadataGrid %} grid__col col-{{ params.termCol }}@m{% endif %}">{{ item.term }}</dt>
        {% for description in item.descriptions %}
            {% if item.descriptions.length > 1 %}
                <dd class="metadata__value{% if params.metadataGrid %} grid__col col-{{ params.descriptionCol }}@m{% endif %}">{{ description.description }}</dd>
            {% else %}
                <dd class="metadata__value{% if params.metadataGrid %} grid__col col-{{ params.descriptionCol }}@m{% endif %}">{{ description.description }}</dd>
            {% endif %}
        {% endfor %}           
    {% endfor %}
{% endif %}
</dl>
