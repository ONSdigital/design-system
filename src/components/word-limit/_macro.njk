{% macro onsWordLimit(params) %}
    {% set limitSingular = params.wordCountOverLimitSingular | default("You have exceeded the word limit by {x} word") %}
    {% set limitPlural = params.wordCountOverLimitPlural | default("You have exceeded the word limit by {x} words") %}
    <span
        id="{{ params.id }}"
        class="ons-input__limit ons-u-fs-s--b ons-u-d-no ons-u-mt-2xs"
        data-wordcount-singular="{{ params.wordCountSingular }}"
        data-wordcount-plural="{{ params.wordCountPlural }}"
        data-wordcount-limit-singular="{{ limitSingular }}"
        data-wordcount-limit-plural="{{ limitPlural }}"
    >
    </span>
{% endmacro %}
