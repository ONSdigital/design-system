{% from "components/icons/_macro.njk" import onsIcon %}

{% macro onsButton(params) %}

{% set tag = "a" if params.url else "button" %}

{% if params.icon is defined %}
  {% set iconType = params.icon.iconType %}
  {% set iconPosition = params.icon.iconPosition %}
{% else %}
  {% if params.url is defined and params.newWindow is defined %}
    {% set iconType = "external-link" %}
    {% set iconPosition = "after" %}
  {% elif params.url is defined or params.buttonStyle == "mobile" %}
    {% set iconType = "chevron" %}
    {% set iconPosition = "after" %}
  {% elif params.buttonStyle == "print" %}
    {% set iconType = "print" %}
    {% set iconPosition = "after" %}
  {% elif params.buttonStyle == "exit" %}
    {% set iconType = "exit" %}
    {% set iconPosition = "after" %}
  {% elif params.submitType == "loader" %}
    {% set iconType = "loader" %}
    {% set iconPosition = "after" %}
  {% endif %}
{% endif %}

  <{{ tag }}
      {% if params.url is defined %}
        href="{{ params.url }}"
        role="button"
      {% else %}
        type="{{ params.type if params.type is defined else ('button' if params.buttonStyle == "print" else 'submit') }}"
      {% endif %}
      class="btn{% if params.classes is defined %} {{ params.classes }}{% endif %}{% if params.url is defined and not params.hideCaret %} btn--link{% endif %}{% if params.disabled is defined %} btn--disabled{% endif %}{% if params.buttonStyle == "print" %} btn--print u-d-no js-print-btn{% endif %}{% if params.buttonStyle == "exit" %} btn--exit{% endif %}{% if params.submitType == "loader" %} btn--loader js-loader js-submit-btn{% endif %}{% if params.submitType == "timer" %} js-timer js-submit-btn{% endif %}"
      {% if params.id is defined %}id="{{ params.id }}"{% endif %}
      {% if params.value is defined %}value="{{ params.value }}"{% endif %}
      {% if params.name is defined %}name="{{ params.name }}"{% endif %}
      {% if params.disabled is defined %} disabled{% endif %}
      {% if params.url is defined and params.newWindow is defined %}target="_blank" rel="noopener"{% endif %}
      {% if params.attributes is defined %}{% for attribute, value in (params.attributes.items() if params.attributes is mapping and params.attributes.items else params.attributes) %}{{attribute}}="{{value}}" {% endfor %}{% endif %}
      >
      <span class="btn__inner{% if params.innerClasses is defined %} {{ params.innerClasses }}{% endif %}">
        {% if iconPosition == "before" %}
          {{
            onsIcon({
                "icon": iconType
            })
          }}
        {% endif %}
        {{- params.html | safe if params.html is defined else params.text -}}
        {% if iconPosition == "after" %}
          {{
            onsIcon({
                "icon": iconType
            })
          }}
        {% endif %}
      </span>
      {% if params.url is defined and params.newWindow is defined %}
        <span class="btn__new-window-description u-vh">{{ params.newWindowDescription | default("opens in a new window") }}</span>
      {% endif %}
      {% if params.buttonContext is defined %}
        <span class="btn__context u-vh">{{ params.buttonContext }}</span>
      {% endif %}
  </{{ tag }}>
{% endmacro %}
