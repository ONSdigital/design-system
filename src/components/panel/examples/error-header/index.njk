{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/lists/_macro.njk" import onsList %}

{% call onsPanel({
        "title": "There are 2 problems with your answer",
        "titleTag": "h1",
        "type": "error"
}) %}

{{
    onsList({
        "element": "ol",
        "classes": "list--bare",
        "ariaHideIndex": false,
        "itemsList": [
            {
                "text": "Enter a number to continue",
                "index": true,
                "url": "#container-test-number",
                "classes": "js-inpagelink"
            },
            {
                "text": "Enter a number less than or equal to 100 to continue",
                "index": true,
                "url": "#container-test-percent",
                "classes": "js-inpagelink"
            }
        ]
    })
}}
{% endcall %}
