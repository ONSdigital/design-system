{% macro onsPanel(params) %}
  {% if params is defined and params.classes is defined %}
    {% set classes  = ' ' + params.classes %}
  {% endif %}

  {% if params is not defined or params.title is not defined%}
      {% set simpleClass = ' panel--simple' %}
  {% endif %}

  {% if params is defined and params.type is defined %}
      {% set typeClass = ' panel--' + params.type %}
  {% else %}
      {% set typeClass = ' panel--info' %}
  {% endif %}

  {% if params is defined and params.spacious is defined %}
      {% set spaciousClass = ' panel--spacious' %}
  {% endif %}

  {% if params and params.icon %}
      {% set iconClass = ' panel--icon' %}
  {% endif %}

    <div
        class="panel{{ typeClass }}{{ iconClass }}{{ simpleClass }}{{ spaciousClass }}{{ classes }}"
        {% if params is defined and params.attributes is defined %}{% for attribute, value in (params.attributes.items() if params.attributes is mapping and params.attributes.items else params.attributes) %}{{attribute}}="{{value}}" {% endfor %}{% endif %}{% if params is defined and params.id is defined %} id="{{params.id}}"{% endif %}
    >
        {% if params is defined and params.type == "warn" %}
            <span class="panel__icon" aria-hidden="true">!</span>
        {% endif %}

        {% if params is defined and params.title is defined %}
            {% set titleTag = params.titleTag | default("div") %}
            <div class="panel__header">
                <{{ titleTag }} {% if params.type is defined %}data-qa="{{ params.type }}-header"{% endif %} class="panel__title u-fs-r--b">{{ params.title | safe }}</{{ titleTag }}>
            </div>
        {% endif %}
        {% if params and params.icon %}
            <span class= "panel--icon"><svg><use xlink:href="/img/icons/icons--{{ params.icon }}.svg#{{ params.icon }}"></use></svg></span>
        {% endif %}
        <div class="panel__body" {% if params is defined and params.attributes is defined %}{% for attribute, value in (params.attributes.items() if params.attributes is mapping and params.attributes.items else params.attributes) %}{{attribute}}="{{value}}" {% endfor %}{% endif %}>{{ (params.body if params else "") | safe }}
            {{ caller() if caller }}
        </div>
    </div>
{% endmacro %}
