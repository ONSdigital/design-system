{% macro onsList(params) %}
    {% set classes = params.classes | lower %}
    
    {% if params.itemsList[0].prefix %}
        {% set otherClasses = 'list--bare list--prefix' %}
    {% elif params.itemsList[0].prefixIcon %}
        {% set otherClasses = 'list--bare list--icons' %}
    {% else %}
        {% set otherClasses = '' %}
    {% endif %}

    {% if params.element is defined and params.element %}
        {% set listEl = params.element | lower %}
    {% else %}
        {% set listEl = 'ul' %}
    {% endif %}

    <{{listEl}} {% if params.id is defined and params.id %}id="{{ params.id }}"{% endif %} class="list {{ otherClasses }} {{ params.classes }}">
        {%- for item in (params.itemsList if params.itemsList is iterable else params.itemsList.items()) -%}
            <li class="list__item {{ item.listclass }}" {% if item.current is defined and item.current %}aria-current="true"{% endif %}>
               
                {% set itemText = item.text %}

                {# For Craft support we also support title #}
                {% if item.title is defined %}{% set itemText = item.title %}{% endif %}
               
                {%- if item.index is defined and item.index or item.prefix is defined and item.prefix or item.prefixIcon is defined and item.prefixIcon -%}
                    <span class="list__prefix"{% if listEl != 'ol' %} aria-hidden="true"{% endif %}>
                    {%- if item.prefix is defined and item.prefix -%}
                        {{- item.prefix -}}.
                    {%- elif (item.index is defined and item.index and listEl != 'ol') or (item.index is defined and item.index and listEl == 'ol' and 'list--bare' in classes) -%}
                        {{- loop.index -}}.
                    {% elif item.prefixIcon is defined and item.prefixIcon %}
                        {% from "components/icons/_macro.njk" import onsIcon %}
                        {{
                            onsIcon({
                                "icon": item.prefixIcon,
                                "iconSize": item.iconSize
                            })
                        }}
                    {%- endif -%} </span>
                {%- endif -%}
                {%- if item.url is defined and item.url and item.current != true -%}

                    {%- if item.external is defined and item.external -%}
                        {% from "components/external-link/_macro.njk" import onsExternalLink %}
                        {{
                            onsExternalLink({
                                "url": item.url,
                                "linkText": itemText
                            })
                        }}
                    {%- else -%}
                        <a href="{{ item.url }}" class="list__link {{ item.classes }}" {% if item.index is defined and item.index %}data-qa="list-item-{{ loop.index }}"{% endif %} {% if item.target is defined and item.target %} target="{{ item.target }}"{% endif %} {% if item.name is defined and item.name %} name="{{ item.name }}"{% endif %} {% if item.rel is defined and item.rel %} rel="{{ item.rel }}"{% endif %}>
                            {%- if item.prefix is defined and item.prefix -%}<span class="u-vh">{{- item.prefix -}}</span>{%- endif -%} {{- itemText | safe -}}
                        </a>
                    {%- endif -%}
                {%- else -%}
                    {{- itemText | safe -}}
                {%- endif -%}
            </li>
        {%- endfor -%}
    </{{listEl}}>
{% endmacro %}
