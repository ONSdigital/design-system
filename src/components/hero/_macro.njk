{% macro onsHero(params) %}

<section class="hero grid--gutterless{% if params.censusTheme is defined %} hero--census{% endif %}">

    <div class="hero__container container">

        <div class="hero__details grid__col{% if params.censusTheme is defined %} col-6@m{%else%} col-8@m{% endif%}{% if params.censusThemeDark is defined %} hero__details--ondark{% endif%}">

            <header>
               
                {% if params.censusTheme is defined %}
                    <h1 class="u-fs-xxxl">{{ params.title }}</h1>
                {% else %}
                    <h1 class="hero__title">{{ params.title }}</h1>
                {% endif %}

                {% if params.subtitle is defined %}
                    <h2 class="u-fs-r--b">{{ params.subtitle }}</h2>
                {% endif %}

            </header>

            {% if params.text is defined %}
                <p class="hero__text">{{ params.text | safe }}</p>
            {% endif %}

            {% if params.button is defined %}
                {% from "components/button/_macro.njk" import onsButton %}
                {{
                    onsButton({
                        "classes": params.button.classes,
                        "type": 'button',
                        "text": params.button.text,
                        "url": params.button.url,
                        "innerClasses": "icon--chevron-right-white"
                    })
                }}
            {% endif %}

        </div>

        {% if params.censusTheme is defined %}           
            
            {% if params.image is defined %}
            <div class="hero__circle-image">
                <img height="560px" width="560px" srcset="{{ params.image.smallSrc }}{{ params.image.filename }} 1x, {{ params.image.largeSrc }}{{ params.image.filename }} 2x" src="{{ params.image.smallSrc }}{{ params.image.filename }}" alt="{{ params.image.alt }}">
            </div>
            {% endif %}

            <div class="hero__circle-lined"><img src="/img/hero/circle-lines.svg" role="presentation" alt="" aria-hidden="true"></div>
            <div class="hero__circle-gradient"></div>
        {% endif %}

        {% if params.censusThemeDark is not defined %}
            <div class="hero__circle-white"></div>
        {% endif %}

    </div>

</section>

{% endmacro %}
