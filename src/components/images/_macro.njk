{%- macro onsImage(params) -%}
    <figure class="figure">
        <img class="figure__image" src="{{ params.url }}" alt="{{ params.alt }}">
        {% if params.caption is defined %}
            <figcaption class="figure__caption">
                {{ params.caption }}
            </figcaption>
        {% endif %}
    </figure>
{%- endmacro -%}
