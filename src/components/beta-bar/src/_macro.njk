{%- macro onsBetaBar(params) -%}
    <div class="beta-bar">
        <div class="container">
            <div class="grid grid--flex grid--gutterless grid--vertical-center grid--no-wrap">
                <div class="grid__col col-auto u-flex-no-grow">
                    <h3 class="beta-bar__badge">{{ params.beta | default("Beta") }}</h3>
                </div>
                <div class="grid__col col-auto u-flex-shrink">
                    <p class="beta-bar__desc u-fs-s u-mb-no">{{ params.html | safe }}</p>
                </div>
            </div>
        </div>
    </div>
{%- endmacro -%}
