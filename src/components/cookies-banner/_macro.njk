{% macro onsCookiesBanner(params) %}
    <div class="ons-cookies-banner" role="region" aria-label="{{ params.ariaLabel | default('cookie banner')}}">
        <div class="ons-container ons-cookies-banner__primary">
            <div class="ons-grid">
                <div class="ons-grid__col ons-col-8@m">
                    <h2 class="ons-cookies-banner__title ons-u-mb-xs">{{ params.statementTitle }}</h2>
                    <div class="ons-cookies-banner__statement">{{ params.statementText | safe }}</div>
                    <div class="ons-grid ons-grid--flex ons-grid--gutterless ons-u-mt-s">
                        <div class="ons-grid__col ons-u-mr-s">
                            {% from "components/button/_macro.njk" import onsButton %}
                            {{
                                    onsButton({
                                        "type": 'button',
                                        "attributes": {
                                            "data-button": 'accept'
                                        },
                                        "text": params.acceptButtonText | default('Accept additional cookies'),
                                        "classes": 'ons-btn--small ons-js-accept-cookies ons-cookies-banner__btn'
                                    })
                            }}
                        </div>
                        <div class="ons-grid__col ons-u-mr-s">
                            {{
                                    onsButton({
                                        "type": 'button',
                                        "attributes": {
                                            "data-button": 'reject'
                                        },
                                        "text": params.rejectButtonText | default('Reject additional cookies'),
                                        "classes": 'ons-btn--small ons-js-reject-cookies ons-cookies-banner__btn'
                                    })
                            }}
                        </div>
                        <div class="ons-grid__col">
                            <a class="ons-cookies-banner__link" href="{{ params.settingsLinkURL }}">{{ params.settingsLinkText | default('Cookie settings') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ons-container ons-cookies-banner__confirmation ons-u-d-no">
            <div class="ons-grid ons-grid--flex ons-grid--between ons-grid--gutterless ons-grid--no-wrap@s ons-grid--vertical-center">
              <div class="ons-grid__col ons-grid__col--flex ons-col-auto ons-u-flex-shrink@s">
                <p class="ons-cookies-banner__desc ons-u-mb-no@s ons-u-mr-s@s"><span class="ons-js-accepted-text ons-u-d-no">{{ params.acceptedText | safe }} </span><span class="ons-js-rejected-text ons-u-d-no">{{ params.rejectedText | safe }} </span>{{ params.preferencesText | safe }}</p>
              </div>
              <div class="ons-grid__col">
                {{
                    onsButton({
                        "type": 'button',
                        "text": params.confirmationButtonText | default('Hide'),
                        "buttonContext": params.confirmationButtonTextAria | default('the cookie message'),
                        "classes": 'ons-btn--secondary ons-btn--small ons-js-hide-button'
                    })
                }}
              </div>
            </div>
        </div>
    </div>
{% endmacro %}
