{%- macro onsMessage(params) -%}
  <div class="message message--{{ params.type }}">
    <div class="message__head">
      <dl class="message__metadata" {% if params.id is defined %} id="{{ params.id }}"{% endif %} {% if params.name is defined %} name="{{ params.name }}"{% endif %}>
          <dt class="message__term u-fw-b">{{ params.fromLabel }}:</dt>
          <dd class="message__value u-fw-b" {% if params.fromId is defined %} id="{{ params.fromId }}"{% endif %} {% if params.fromName is defined %} name="{{ params.fromName }}"{% endif %}>{{ params.fromValue }}</dd>
          <br>
          <dt class="message__term u-fs-s">{{ params.sentLabel }}:</dt>
          <dd class="message__value u-fs-s" {% if params.sentId is defined %} id="{{ params.sentId }}"{% endif %} {% if params.sentName is defined %} name="{{ params.sentName }}"{% endif %}>{{ params.sentValue }}</dd>
      </dl>
      {% if params.unreadLink is defined %}
          <a class="message__unread-link" {% if params.unreadLinkId is defined %}id="{{ params.unreadLinkId }}"{% endif %} href="{{ params.unreadLink }}">{{ params.unreadLinkText }}</a>
      {% endif %}
    </div>
    <div class="message__body" {% if params.messageID is defined %} id="{{ params.messageID }}"{% endif %} {% if params.messageName is defined %} name="{{ params.messageName }}"{% endif %}>
      {{ caller() }}
    </div>
  </div>
{%- endmacro -%}
