{% from "components/error/_macro.njk" import onsError %}

{% macro onsFieldset(params) %}
    {% set fieldset %}
        {% if params.dontWrap %}
            {{ caller() }}
        {% else %}
            <fieldset
                {% if params.id %}id="{{ params.id }}"{% endif %}
                class="fieldset{% if params.classes is defined %} {{ params.classes }}{% endif %}"
                {% if params.attributes is defined %}{% for attribute, value in (params.attributes.items() if params.attributes is mapping and params.attributes.items else params.attributes) %}{{ attribute }}{% if value is defined %}="{{ value }}"{% endif %} {% endfor %}{% endif %}
            >
                <legend class="fieldset__legend{% if params.legendClasses is defined %} {{ params.legendClasses }}{% endif %}">
                    {{- params.legend | safe -}}
                    {% if params.description is defined %}
                        <br>
                        <span class="fieldset__description">{{ params.description }}</span>
                    {% endif %}
                </legend>
                {{ caller() }}
            </fieldset>
        {% endif %}
    {% endset %}

    {% if params.error is defined %}
        {% call onsError(params.error) %}
            {{ fieldset | safe }}
        {% endcall %}
    {% else %}
        {{ fieldset | safe }}
    {% endif %}
{% endmacro %}
