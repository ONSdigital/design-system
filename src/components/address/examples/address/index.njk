---
layout: none
---
{% extends "styles/page-template/_template.njk" %}

{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/address/_macro.njk" import onsAddressInput %}

{% set page = {
    "title": "Manual Address Input Example"
} %}
{% block main %}
    {% call onsQuestion({
        "title": "What is your address?"
    }) %}
        {{ onsAddressInput({
            "id": "address",
            "legend": "What is your address?",
            "legendClasses": "u-vh",
            "line1": {
                "label": "Address line 1"
            },
            "line2": {
                "label": "Address line 2"
            },
            "town": {
                "label": "Town or City"
            },
            "county": {
                "label": "County"
            },
            "postcode": {
                "label": "Postcode"
            }
        }) }}
    {% endcall %}
{% endblock %}
