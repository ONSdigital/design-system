<div class="ons-header__grid-top ons-grid ons-grid--gutterless ons-grid--flex ons-grid--between ons-grid--vertical-center ons-grid--no-wrap{% if params.mastheadLogo.classes %} {{ params.mastheadLogo.classes }}{% elseif params.mastheadLogoStackedArray.classes %} {{ params.mastheadLogoStackedArray.classes }}{% endif %}">
    <div class="ons-grid__col ons-col-auto">

        {% if !params.mastheadLogoStackedArray  %}
            {%-if params.mastheadLogoUrl %}
                <a class="ons-header__org-logo-link" href="{{ params.mastheadLogoUrl }}">
            {% endif -%}
            <div class="ons-header__org-logo ons-header__org-logo--large">
                {% if params.mastheadLogo.large %}
                    {{ params.mastheadLogo.large | safe }}
                {% else %}
                    {{-
                        onsIcon({
                            "iconType": 'ons-logo-' + currentLanguageISOCode,
                            "altText": 'Office for National Statistics logo'
                        })
                    -}}
                {% endif %}
            </div>
            <div class="ons-header__org-logo ons-header__org-logo--small">
                {% if params.mastheadLogo.small %}
                    {{ params.mastheadLogo.small | safe }}
                {% elif params.mastheadLogo.large %}
                    {{ params.mastheadLogo.large | safe }}
                {% else %}
                    {{-
                        onsIcon({
                            "iconType": 'ons-logo-stacked-' + currentLanguageISOCode,
                            "altText": 'Office for National Statistics logo'
                        })
                    -}}
                {% endif %}
            </div>
            {% if params.mastheadLogoUrl %}
                </a>
            {% endif %}
        {% else %}
            {%- for logo in params.mastheadLogoStackedArray %}
            <a class="ons-header__org-logo-link" href="{{ logo.url }}">
            <div class="ons-header__org-logo ons-header__org-logo--small">

                {% if logo.logoImage %}
                    {{ logo.logoImage | safe }}
                {% else %}
                    {{-
                        onsIcon({
                            "iconType": 'ons-logo-stacked-' + currentLanguageISOCode,
                            "altText": 'Office for National Statistics logo'
                        })
                    -}}
                {% endif %}
                </div>
                </a>
            {% endfor -%}
        {% endif %}
    </div>