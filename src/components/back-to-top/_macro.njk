{% from "components/icon/_macro.njk" import onsIcon %}

{% macro onsBackToTop() %}
    <div class="ons-back-to-top ons-js-btt ons-back-to-top__enabled">
        <a href="#top" class="ons-back-to-top__link">
            {{
                onsIcon({
                    "iconType": 'arrow-up',
                    "iconSize": 'xs'
                })
            }}
            <span>Back to top</span>
        </a>
    </div>
{% endmacro %}
