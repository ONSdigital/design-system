<nav class="nav {{ params.classes }}" id="{{ params.id }}" aria-label="{{ params.ariaLabel }}">
    <ul class="nav__list" aria-label="{{ params.ariaListLabel }}" role="menubar">
       {% for item in params.items %}
            <li class="nav__item {{ item.classes }}{{ ' nav__item--active' if (item.path == params.currentPath) or (item.path in params.currentPath) }}">
                <a href="{{ item.path }}" class="nav__link" role="menuitem">{{ item.title }}</a>
            </li>
       {% endfor %}
    </ul>
</nav>
