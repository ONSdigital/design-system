{% macro onsQuote(params) %}
    <blockquote class="quote">
        {% from "components/icons/_macro.njk" import onsIcon %}
        {{
            onsIcon({
                "icon": 'quote'
            })
        }}
        <span class="quote__text u-fs-{{ params.textFontSize if params.textFontSize is defined and params.textFontSize else 'l' }}">{{ caller() if caller else params.text | safe }}</span>
        {% if params.ref is defined and params.ref %}<span class="quote__ref">- {{ params.ref | safe }}</span>{% endif %}
    </blockquote>
{% endmacro %}
