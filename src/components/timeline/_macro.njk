{% macro onsTimeline(params) %}

    {% from "components/list/_macro.njk" import onsList %}

    <div class="ons-timeline{{ ' ' + params.classes if params.classes else '' }}">
        {% set headingLevel = params.headingLevel | default(2) %}
        {% for item in params.items %}
            <div class="ons-timeline__item">
                <h{{ headingLevel }} class="ons-timeline__heading">{{ item.heading }}</h{{ headingLevel }} >
                {% if item.itemsList %}
                    <div class="ons-timeline__content">
                        {{
                            onsList({
                                "variants": 'bare',
                                "itemsList": item.itemsList
                            })
                        }}
                    </div>
                {% elif item.content %}
                    <div class="ons-timeline__content">
                        {{ item.content | safe }}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>

{% endmacro %}
