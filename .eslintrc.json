{
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "$": true,
    "jQuery": true,
    "browser": true,
    "ga": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": [1],
    "no-alert": 0,
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "new-cap": [0],
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "no-var": [1],
    "one-var": [0],
    "max-len": [0, { "code": 140, "ignoreUrls": true }]
  }
}
